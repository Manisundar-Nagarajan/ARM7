//Write an ECP to transmit A to Z serially through UART0 of LPC2129. Assume: Pclk=15Mhz, Baud rate=9600

#include<LPC21XX.H>
void UART_config(void);
void UART_Tx(unsigned char);

int main()
	{
	  unsigned char ch='A';
		PINSEL0|=0x5;
		UART_config();
		while(1)
		{
			while(ch<='Z')
			{
				UART_Tx(ch++);
				if(ch>'Z')
				{
					ch='A';
					UART_Tx('\r');
					UART_Tx('\n');
				}
			}
		}
	}
	
	void UART_config(void)
	{		
				U0LCR=0x83;
				U0DLL=97;
				U0DLM=0;
				U0LCR=0x03;
	}
	
	void UART_Tx(unsigned char ch)
	{
		U0THR=ch;
		while(((U0LSR>>5)&1)==0);
	}

