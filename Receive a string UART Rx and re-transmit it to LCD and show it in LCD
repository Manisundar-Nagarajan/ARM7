// Receive a string and re-transmit it to LCD and show it in LCD

#include<stdio.h>
#define LCD 0xff
#define RS 10
#define E 11
void LCD_INIT(void);
void LCD_CMD(unsigned char);
void LCD_DATA(unsigned char);
void LCD_STRING(unsigned char*);
void delay_ms(unsigned int);

void LCD_INIT(void)
{
IODIR0=(LCD<<2)|RS|E;
LCD_CMD(0x01);
LCD_CMD(0x02);
LCD_CMD(0x0c);
LCD_CMD(0x38);
}
void LCD_CMD(unsigned char CMD)
{
IOPIN0=(CMD<<2);
IOCLR0=RS;
IOSET0=E;
delay_ms(250);
IOCLR0=E;
}
void LCD_DATA(unsigned char d)
{
IOPIN0=(d<<2);
IOSET0=RS;
IOSET0=E;
delay_ms(250);
IOCLR0=E;
}
void LCD_STRING(unsigned char*s)
{
   while(*s)
   {
   LCD_DATA(*s++);
   }
}
void delay_ms(unsigned int ms)
	{
	T0PR=15000-1;
	T0TCR=0x01;
	while(T0TC<ms);
	T0TCR=0x03;
	T0TCR=0x00;
	}


/***** HEADER FILE*****/


